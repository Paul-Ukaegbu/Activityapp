@model newActivity;

<h1>Dojo Activity Center</h1>
<a asp-action="Success" asp-controller="Home">Home</a>
<a asp-action="Logout" asp-controller="Home">LogOut</a>

<form class="col-3" asp-action="Create" asp-controller="Activity" method="post">
    <div class="form-group">
        <span asp-validation-for="Title"></span>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="Date"></span>
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="Duration"></span>
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="Time"></span>
        <label asp-for="Time"></label>
        <select asp-for="Time">
            <option value="Hours">Hours</option>
            <option value="Minutes">Minutes</option>
            <option value="Days">Days</option>
        </select>
    </div>

    <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" cols="30" rows="5"></textarea>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-outline-primary" value="Create">
    </div>
</form>